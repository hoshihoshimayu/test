<h1>ログイン画面</h1>
<% if flash[:notice] %>
  <p>
    <font color="blue">
      <%= flash[:notice] %>
    </font>
  </p>
<% end %>  

<h3>アニメを斬るにログインする</h3>
<%= form_tag '/top/login',method: :post do %>
  <p>
    <%= label_tag :uid, 'ユーザID' %>
    <%= text_field_tag :uid %>
  </p>

  <p>
    <%= label_tag :pass, 'パスワード' %>
    <%= password_field_tag :pass %>
  </p>
  
  <p>
    <%= submit_tag 'ログイン' %>
  </p>

<%end%>

<p>
  <%= link_to '新規登録', new_user_path %>
</p>

<p>
  <%= link_to '戻る', :back %>
</p>