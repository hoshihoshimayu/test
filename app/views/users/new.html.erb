<%= form_for @user, url: {action: :create} do |f| %>
<p>
  <%= f.label :uid, 'ユーザID' %>
  <%= f.text_field :uid %>
</p>
<p>
  <%= f.label :password, 'パスワード' %>
  <%= f.password_field :password %>
</p>
<p>
  <%= f.label :password_confirmation, 'パスワード(確認)' %>
  <%= f.password_field :password_confirmation %>
</p>
<p>
  <button type="button" class="btn btn-primary">
   <%= f.submit '登録' %>
  </button>
</p>
<% end %>

<p><%= link_to '戻る', :back %>


